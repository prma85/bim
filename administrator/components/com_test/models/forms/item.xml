<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_TEST_FORM_LBL_ITEM_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_TEST_FORM_LBL_ITEM_CREATED_BY"
            description="COM_TEST_FORM_DESC_ITEM_CREATED_BY"  /> 

       <field name="modified_by" type="modifiedby" default="" 
            label="COM_TEST_FORM_LBL_ITEM_MODIFIED_BY"
            description="COM_TEST_FORM_DESC_ITEM_MODIFIED_BY"  /> 

       <field name="title" type="text"
                
            label="COM_TEST_FORM_LBL_ITEM_TITLE"
            description="COM_TEST_FORM_DESC_ITEM_TITLE" 
                
                
                 required="true"  /> 

 <field name="alias" type="text" class="inputbox"
            label="COM_TEST_FORM_LBL_ITEM_ALIAS"
            description="COM_TEST_FORM_DESC_ITEM_ALIAS" /> 

       <field name="category" type="category"
                
            label="COM_TEST_FORM_LBL_ITEM_CATEGORY"
            description="COM_TEST_FORM_DESC_ITEM_CATEGORY" 
                
                
                
            extension="com_test" /> 

 
		<field name="filter_category" type="category"
            label="COM_TEST_FORM_LBL_ITEM_CATEGORY"
            description="COM_TEST_FORM_DESC_ITEM_CATEGORY"  extension="com_test" show_root="1" onchange="this.form.submit();" /> 

 
		<field name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox" size="45"
			labelclass="control-label"
		/> 

 
		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
